{% extends 'base.html.twig' %}

{% block title %}Книги{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">Книги <a href="{{ path('books_new') }}"><i data-toggle="tooltip" title="Добавить книгу" class="fas fa-plus"></i></a></div>

        <div class="row">
            {% for book in books %}
                <div class="card-wrap col-12 col-md-6 col-xl-4">
                    <div class="card">
                        {#<img class="card-img-top" src="..." alt="Card image cap">#}
                        <div class="card-body">
                            <h5 class="card-title">{{ book.name }}</h5>
                            <ul>
                                <li>Авторы:
                                    {% for author in book.authors %}
                                        <a href="{{ path('authors_show', {'id': author.id}) }}">{{ author.name }}</a>
                                        {% if not loop.last %}, {% endif %}
                                    {% else %}
                                        -
                                    {% endfor %}
                                </li>
                                <li>ISBN: {{ book.isbn }}</li>
                                {% if book.pagesCount %}<li>Страниц: {{ book.pagesCount }}</li> {% endif %}
                                <li>Год: {{ book.year }}</li>
                            </ul>
                            <a href="{{ path('books_show', {'id': book.id}) }}" class="btn btn-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
