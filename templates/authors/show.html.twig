{% extends 'base.html.twig' %}

{% block title %}{{ author.name }} - Авторы{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            {{ author.name }} 
            <a href="{{ path('authors_edit', {'id': author.id}) }}"><i data-toggle="tooltip" title="Редактировать" class="fas fa-pencil-alt"></i></a>
            <a class="delete" href="{{ path('authors_delete', {'id': author.id}) }}"><i data-toggle="tooltip" title="Удалить" class="fas fa-trash-alt"></i></a>
        </div>

        <div class="card-wrap">
            <div class="card">
                <div class="card-body">
                    <ul>
                        <li>Фамилия: {{ author.lastName ?: '-' }}</li>
                        <li>Имя: {{ author.firstName ?: '-' }}</li>
                        <li>Отчество: {{ author.middleName ?: '-' }}</li>
                        <li class="mt-3">Книги:
                            {% for book in author.books %}
                                <a href="{{ path('books_show', {'id': book.id}) }}">{{ book.name }}</a>
                                {% if not loop.last %}, {% endif %}
                            {% else %}
                                -
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>

            <a href="{{ path('authors') }}" class="btn btn-primary mt-5">Смотреть всех авторов</a>
        </div>
    </div>
{% endblock %}
