{% extends 'base.html.twig' %}

{% block title %}{{ author.name }} - {{ 'pages.authors.title' | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            {{ author.name }}
            {% apply spaceless %}
                <a href="{{ path('authors_edit', {'id': author.id}) }}">
                    <i data-toggle="tooltip" title="{{ 'general.buttons.edit' | trans }}" class="fas fa-pencil-alt"></i>
                </a>
            {% endapply %}
            <a class="delete" href="{{ path('authors_delete', {'id': author.id}) }}"><i data-toggle="tooltip" title="{{ 'general.buttons.delete' | trans }}" class="fas fa-trash-alt"></i></a>
        </div>

        <div class="card-wrap">
            <div class="card">
                <div class="card-body">
                    <ul>
                        <li>{{ 'last_name.label' | trans({}, 'authors') }}: {{ author.lastName ?: '-' }}</li>
                        <li>{{ 'first_name.label' | trans({}, 'authors') }}: {{ author.firstName ?: '-' }}</li>
                        <li>{{ 'middle_name.label' | trans({}, 'authors') }}: {{ author.middleName ?: '-' }}</li>
                        <li class="mt-3">{{ 'books.label' | trans({}, 'authors') }}:
                            {% for book in author.books %}
                                <a href="{{ path('books_show', {'id': book.id}) }}">{{ book.name }}</a>
                                {% if not loop.last %}, {% endif %}
                            {% else %}
                                -
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>

            <a href="{{ path('authors_index') }}" class="btn btn-primary mt-5">{{ 'pages.books.button_show_all' | trans }}</a>
        </div>
    </div>
{% endblock %}
